{% extends 'base-admin.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table table-dark table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ product.picture }}</td>
            </tr>
            <tr>
                <th>NbStars</th>
                <td>{{ product.nbStars }}</td>
            </tr>
        </tbody>
    </table>
    <div class=" d-flex justify-content-center">
    <a href="{{ path('admin_product_index') }}" class="btn btn-dark mx-2">back to list</a>

    <a href="{{ path('admin_product_edit', {'id': product.id}) }}" class="btn btn-secondary mx-2 ">edit</a>

    {{ include('admin/product_crud/_delete_form.html.twig') }}
    </div>
{% endblock %}
